<script>
var action_methods = {
    init: function(){
        obj = this;
        $('#app').on("click", ".Link", this.doClick);
    },
    doClick: function(e){
        e.preventDefault();

        var $this = $(this);
        var shivId = $this.data('shiv');

        if(!shivId) {
            var target_ids = $this.data('target').split(' ');
            var data_chunks = target_ids.map(function(x) {
              return $('#' + x).html()
            });
            if(target_ids.length === 0) return;

            var $placeToAddShiv = obj.identifyPlaceToAddShiv($this);
            var newShivId = obj.uuid();
            obj.addShiv( $placeToAddShiv, data_chunks, newShivId);
            $this.data("shiv", newShivId);
            $this.attr("data-shiv", newShivId);
        }
        $shiv = $("#"+shivId);
        if ($shiv.is(":visible")) { $shiv.hide(); } else { $shiv.show(); }
        $("#"+shivId+" .shivContents").show();
    },
    identifyPlaceToAddShiv: function($sourceElement) {
        var parentElement = $sourceElement.parent();
        var contentsArr = parentElement.contents().toArray();
        var offset = contentsArr.indexOf($sourceElement[0]);
        var subsequentText = (contentsArr.length > offset) ? contentsArr[offset+1] : '';

        if( subsequentText == '' || typeof subsequentText == 'undefined' ) {
            return $sourceElement;
        }

        var charsToSkipRegex = /^(\)?[.,;]?)/;
        var match = charsToSkipRegex.exec(subsequentText.textContent);

        if (match) {
            var newNode = $("<span></span>");
            var textAfterBracket = (subsequentText.textContent.length > 1) ? subsequentText.textContent.replace(match[1],"") : "";

            $sourceElement.after(textAfterBracket);
            $sourceElement.after(newNode);
            $sourceElement.after(match[1]);
            subsequentText.textContent="";
            return newNode;
        } else {
            return $sourceElement;
        }
    },
    addShiv: function($placeToAddShiv, data_chunks, newShivId) {
        var placeholder = "<span class='shivContainer' id='"+newShivId+"'></span>";
        var $placeholderEl = $(placeholder);
        $placeholderEl.attr("id", newShivId);

        for (var i = 0; i<data_chunks.length; i++) {
            var data_chunk = data_chunks[i];
            var $wrapper = $("#shivPlaceholder").clone();
            $wrapper.removeAttr("id").removeAttr("style");
            $wrapper.find(".shivContent").append(data_chunk);
            $placeholderEl.append($wrapper);
        }

        $placeToAddShiv.after($placeholderEl);
        window.existingBlazy.revalidate();
        $placeholderEl.find(".close").click(function() {
            var shivToClose = $($(this).parents(".shivContents")[0]);
            shivToClose.hide();
            var remainingShivs = shivToClose.siblings(".shivContents:visible");
            if (remainingShivs.length === 0){
                $(this).parents(".shivContainer").hide();
            }
        });
    },
    uuid: function() {
        var uuid = '';
        for (i = 0; i < 16; i++) {
            var r = Math.floor(Math.random()*16).toString(16).substring(0,1);
            uuid = uuid + r;
        }
        return uuid;
    }
};

action_methods.init();

